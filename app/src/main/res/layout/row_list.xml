<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:padding="4dp"
    android:background="@drawable/selector"
    android:id="@+id/relative_layout_row"
    android:descendantFocusability="blocksDescendants"
    >
    <!--Empeche le click d'être consumé par les item dans la liste-->


    <TextView
        android:padding="8dp"
        android:hint="Hint"
        android:id="@+id/entry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:lines="1"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/entry_delete"
        android:layout_toStartOf="@+id/entry_delete" />

    <ImageButton
        android:id="@+id/entry_delete"
        android:onClick="deleteTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_delete"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <!--<View-->
        <!--android:layout_below="@id/entry_delete"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/colorAccent" />-->

</RelativeLayout>
